{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_TOOLCHAIN_FILE=${cwd}/project/arm-gnu-none-eabi.cmake",
                "-DCMAKE_SYSTEM_NAME=Generic",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-GNinja",
                "-S", 
                "project",
                "-B", 
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${cwd}/build",
                "--target",
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/stm32f4x.cfg",
                "-c",
                "program ${cwd}/build/template.elf verify reset exit"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            }
        },
        {
      "label": "Clean",
      "type": "shell",
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "if (Test-Path ${cwd}/build) {Remove-Item ${cwd}/build -Recurse -Force}; if (Test-Path ${cwd}/.cache) {Remove-Item ${cwd}/.cache -Recurse -Force}"
        ]
      },
      "linux": {
        "command": "bash",
        "args": ["-c", "rm -rf ${cwd}/build ${cwd}/.cache || true"]
      },
      "osx": {
        "command": "bash",
        "args": ["-c", "rm -rf ${cwd}/build ${cwd}/.cache || true"]
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "options": {
              "cwd": "${workspaceFolder}"
            }
    }
  ]
}
